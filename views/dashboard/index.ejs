<div class="container-fluid">
  <!-- Breadcrumb -->
  <div class="row mt-2 ms-1 me-1">
    <ul class="breadcrumb rounded">
      <li><a href="#">Dashboard</a></li>
    </ul>
  </div>
  <!-- Main content -->
  <div class="row mt-2 mb-2 d-flex justify-content-between">
    <!-- Dành cho Admin/ IT -->
    <% if (user && user.role === 'admin') { %>
    <div class="col-md-12 d-flex justify-content-between">
      <div class="col-md-3">
        <div class="card m-2 shadow">
          <div class="card-header">
            <h5 class="text-center">Tổng số lượng thiết bị</h5>
          </div>
          <div class="card-body bg-primary">
            <h1 id="totalEq" class="text-center">0</h1>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card m-2 shadow">
          <div class="card-header">
            <h5 class="text-center">Đang sử dụng</h5>
          </div>
          <div class="card-body bg-info">
            <h1 id="eqInUse" class="text-center">0</h1>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card m-2 shadow">
          <div class="card-header"><h5 class="text-center">Báo lỗi</h5></div>
          <div class="card-body bg-danger">
            <h1 id="repairReq" class="text-center">0</h1>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card m-2 shadow">
          <div class="card-header">
            <h5 class="text-center">Hỗ trợ cài đặt</h5>
          </div>
          <div class="card-body bg-warning">
            <h1 id="setupReq" class="text-center">0</h1>
          </div>
        </div>
      </div>
    </div>
    <% } %>
    <!-- Dành cho user -->
    <div class="m-2"><p id="TicketInfoOfCurrentLoginUser"></p></div>
  </div>

  <!-- JS DataTable -->
  <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <script src="https://cdn.datatables.net/2.3.3/js/dataTables.js"></script>
  <script src="https://cdn.datatables.net/2.3.3/js/dataTables.bootstrap5.js"></script>
</div>
<script>
  async function loadDashboardInto() {
    try {
      const resTotalEq = await fetch("/dashboard/totalEq");
      const resEqInUse = await fetch("/dashboard/eqInUse");
      const resRepairTicket = await fetch("/dashboard/repairReq");
      const resSetupTicket = await fetch("/dashboard/setupReq");
      const dataTotalEq = await resTotalEq.json();
      const dataEqInUse = await resEqInUse.json();
      const dataRepair = await resRepairTicket.json();
      const dataSetup = await resSetupTicket.json();

      const resTicketInfoOfCurrentLoginUser = await fetch(
        "/dashboard/getTicketInfoOfCurrentLoginUser"
      );
      const dataTicketInfoOfCurrentLoginUser =
        await resTicketInfoOfCurrentLoginUser.json();

      if (
        dataTotalEq.success &&
        dataEqInUse.success &&
        dataRepair.success &&
        dataSetup.success &&
        dataTicketInfoOfCurrentLoginUser.success
      ) {
        document.getElementById("totalEq").textContent = dataTotalEq.data;
        document.getElementById("eqInUse").textContent = dataEqInUse.data;
        document.getElementById("repairReq").textContent = dataRepair.data;
        document.getElementById("setupReq").textContent = dataSetup.data;
        document.getElementById("TicketInfoOfCurrentLoginUser").textContent =
          "OK";
      }
    } catch (err) {
      console.error("Fetch lỗi:", err);
      document.getElementById("totalEq").textContent = "Error";
    }
  }

  loadDashboardInto();
</script>
